<% if logged_in? %>
  <%= form_with(model: feed, local: true, url:choose_new_or_edit) do |form| %>
    <% if feed.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(feed.errors.count, "error") %> prohibited this feed from being saved:</h2>

        <ul>
        <% feed.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :image %>
      <%= image_tag(@feed.image.url) if @feed.image && @feed.image.url %>
      <%= form.file_field :image %>
      <%= form.hidden_field :image_cache %>
      <%= form.label :タイトル %>
      <%= form.text_field :title %>
      <%= form.label :内容 %>
      <%= form.text_field :content %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
  <% else %>
    <h3>ログインしないと、画像やコメントの投稿・編集はできません</h3>
<% end %>
