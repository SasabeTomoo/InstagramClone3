<p id="notice"><%= notice %></p>

<h4>[タイトル]</h4>
<h4><%= @feed.title %></h4>
<h4>[内容]</h4>
<h4><%= @feed.content %></h4>
<p>
  <strong>Image:</strong>
  <!-- publicの次のフォルダに保存されている画像のリンク先"/uploads/feed/image/19/20200821_160028.jpg" -->
  <!-- @feed = Feed.new(feed_params) -->
  <%= image_tag @feed.image.url %>
</p>
<% if logged_in? %>
  <%= link_to 'Edit', edit_feed_path(@feed) %>
<% end %>
<%= link_to 'Back', feeds_path %>

<% unless @feed.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(feed_id: @feed.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>
